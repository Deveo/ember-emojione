{{yield (hash
  emojiPicker = (component 'emoji-picker'
    selectAction = (action 'selectEmoji')
    closeAction  = (action 'closeEmojiPicker')
    isVisible    = isEmojiPickerVisible
  )

  emojiPickerToggler = (component 'emoji-picker-toggler'
    toggleAction         = (action 'toggleEmojiPicker')
    isEmojiPickerVisible = isEmojiPickerVisible
  )

  emojiAssist = (component 'emoji-typing-assistance'
    filterInput      = _assistFilterInput
    $input           = $input
    keyPressNotifier = keyPressNotifier
