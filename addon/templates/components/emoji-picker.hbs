<nav class = "eeo-emojiPicker-nav">
  {{#each categorySections as |categoryObj index|}}
    {{emoji-picker/label
      categoryObj  = categoryObj
      emoji        = (get emojiByCategoryIdFiltered categoryObj.category.id)
      scrollableId = scrollableId
    }}
  {{/each}}
</nav>

<div
  class = "eeo-emojiPicker-scrollable"
  id    = {{scrollableId}}
>
  {{#each emojiService.categories as |category|}}
    {{emoji-picker/category
      emoji        = (get emojiByCategoryIdFiltered category.id)
      category     = category
      filterInput  = filterInput
      selectAction = selectAction
    }}
  {{/each}}
</div>{{! .eeo-emojiPicker-scrollable }}



<div class = "eeo-emojiPicker-footer">
  <div class = "eeo-emojiPicker-filter">
    {{one-way-input
      searchInput
      class       = "eeo-emojiPicker-filter-input"
      update      = (action 'filter')
      placeholder = "Search"
    }}
  </div>{{! .eeo-emojiPicker-filter }}


  <div class = "eeo-emojiPicker-tones">
    <a href class = "eeo-emojiPicker-tone _default" {{action 'setTone' 'default'}}>0</a>
    <a href class = "eeo-emojiPicker-tone _1"       {{action 'setTone' '1'      }}>1</a>
    <a href class = "eeo-emojiPicker-tone _2"       {{action 'setTone' '2'      }}>2</a>
    <a href class = "eeo-emojiPicker-tone _3"       {{action 'setTone' '3'      }}>3</a>
    <a href class = "eeo-emojiPicker-tone _4"       {{action 'setTone' '4'      }}>4</a>
    <a href class = "eeo-emojiPicker-tone _5"       {{action 'setTone' '5'      }}>5</a>
  </div>
</div>{{! .eeo-emojiPicker-footer }}